pipeline {
    agent any
    environment {
        GITHUB_REPO = "https://github.com/Khalil0010/Administration.git"
        DOCKER_REGISTRY = "aziz244"
        NAMESPACE = "savewise"
        KUBECONFIG_CREDENTIALS = "kubeconfig-id"
    }

    options {
        timestamps()
      
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${env.GITHUB_REPO}"
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    def services = ['analytics-service', 'auth-service', 'budget-service', 
                                    'frontend', 'notification-service', 'saving-goals-service', 
                                    'transaction-service', 'user-service']
                    services.each { svc ->
                        dir("${svc}") {
                            sh 'python -m venv venv'
                            sh './venv/Scripts/pip install --upgrade pip'
                            sh './venv/Scripts/pip install -r requirements.txt'
                        }
                    }
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    def services = ['analytics-service', 'auth-service', 'budget-service', 
                                    'frontend', 'notification-service', 'saving-goals-service', 
                                    'transaction-service', 'user-service']
                    services.each { svc ->
                        dir("${svc}") {
                            sh "docker build -t ${DOCKER_REGISTRY}/${svc}:1.0 ."
                        }
                    }
                }
            }
        }

        stage('Prepare Trivy') {
            steps {
                script {
                    // Vérifier si trivy est déjà dispo
                    def trivyExists = sh(script: 'command -v trivy || true', returnStdout: true).trim()
                    if (!trivyExists) {
                        echo "Trivy not found, installing locally..."
                        sh '''
                            rm -rf trivy-bin
                            mkdir -p trivy-bin
                            wget -q https://github.com/aquasecurity/trivy/releases/download/v0.43.0/trivy_0.43.0_Linux-64bit.tar.gz -O trivy.tar.gz
                            if [ ! -s trivy.tar.gz ]; then
                                echo "ERROR: Downloaded Trivy archive is empty or missing!"
                                exit 1
                            fi
                            tar -xzf trivy.tar.gz -C trivy-bin
                            rm trivy.tar.gz
                            chmod +x trivy-bin/trivy
                        '''
                    } else {
                        echo "Trivy already installed."
                    }
                }
            }
        }

        stage('Run Trivy Scan') {
            steps {
                script {
                    echo "Running Trivy scan on Docker images..."
                    def services = ['analytics-service', 'auth-service', 'budget-service', 
                                    'frontend', 'notification-service', 'saving-goals-service', 
                                    'transaction-service', 'user-service']

                    services.each { svc ->
                        echo "Scanning ${svc} image..."
                        def trivyStatus = sh(script: """
                            ./trivy-bin/trivy image --exit-code 1 --severity HIGH,CRITICAL ${DOCKER_REGISTRY}/${svc}:1.0
                        """, returnStatus: true)

                        if (trivyStatus != 0) {
                            echo "❌ Trivy scan found HIGH or CRITICAL vulnerabilities in ${svc}. Failing pipeline."
                            error("Build failed due to Trivy scan finding vulnerabilities in ${svc}.")
                        } else {
                            echo "✅ ${svc} image passed Trivy scan!"
                        }
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    def services = ['analytics-service', 'auth-service', 'budget-service', 
                                    'frontend', 'notification-service', 'saving-goals-service', 
                                    'transaction-service', 'user-service']
                    services.each { svc ->
                        sh "docker push ${DOCKER_REGISTRY}/${svc}:1.0"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: "${KUBECONFIG_CREDENTIALS}", variable: 'KUBECONFIG')]) {
            
                    // Apply namespace and frontend deployment explicitly
                    sh 'kubectl apply -f k8s/namespace.yaml'
                    sh 'kubectl apply -f k8s/frontend/deployment.yaml'
                

                    def services = ['analytics-service', 'auth-service', 'budget-service', 
                                    'frontend', 'notification-service', 'saving-goals-service', 
                                    'transaction-service', 'user-service']

                    services.each { svc ->
                        sh "kubectl apply -f k8s/${svc}/deployment.yaml"
                        sh "kubectl apply -f k8s/${svc}/service.yaml"
                    }
                }
            }
        }

        stage('Smoke Test') {
            steps {
                script {
                    def urls = [
                        "auth-service": "http://auth-service:8000/health",
                        "user-service": "http://user-service:8001/health",
                        "budget-service": "http://budget-service:8003/health",
                        "frontend": "http://frontend:8501",
                        "transaction-service": "http://transaction-service:8002/health",
                        "notification-service": "http://notification-service:8006/health",
                        "saving-goals-service": "http://saving-goals-service:8004/health",
                        "analytics-service": "http://analytics-service:8005/health"
                    ]

                    urls.each { name, url ->
                        try {
                            sh "curl -sSf ${url} || exit 1"
                            echo "${name} is UP"
                        } catch (err) {
                            error "${name} failed the smoke test!"
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
