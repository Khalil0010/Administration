pipeline {
    agent any

    environment {
        GITHUB_REPO            = "https://github.com/Khalil0010/Administration.git"
        DOCKER_REGISTRY        = "aziz244"
        IMAGE_TAG              = "1.0"
        KUBECONFIG_CREDENTIALS = "kubeconfig-id"
        NAMESPACE              = "savewise"
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${GITHUB_REPO}"
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]
                    services.each { svc ->
                        dir(svc) {
                            bat '"C:\\Users\\HP\\AppData\\Local\\Programs\\Python\\Python313\\python.exe" -m venv venv'
                            bat '.\\venv\\Scripts\\pip.exe install --upgrade pip'
                            bat '.\\venv\\Scripts\\pip.exe install -r requirements.txt'
                        }
                    }
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]
                    services.each { svc ->
                        dir(svc) {
                            bat "docker build -t ${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG} ."
                        }
                    }
                }
            }
        }

        stage('Run Trivy Scan') {
            steps {
                script {
                    // Assuming Trivy is already installed and in PATH on Windows agent
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]
                    services.each { svc ->
                        def image = "${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG}"
                        echo "Scanning ${image}..."
                        def status = bat(script: "trivy image --exit-code 1 --no-progress --severity HIGH,CRITICAL ${image}", returnStatus: true)
                        if (status != 0) {
                            error("âŒ HIGH/CRITICAL vulnerabilities found in ${svc}")
                        }
                        echo "âœ… ${svc} passed Trivy scan"
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]
                    services.each { svc ->
                        bat "docker push ${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: KUBECONFIG_CREDENTIALS, variable: 'KUBECONFIG')]) {
                    script {
                        bat 'kubectl apply -f k8s\\namespace.yaml'

                        def services = [
                            'analytics-service', 'auth-service', 'budget-service',
                            'frontend', 'notification-service', 'saving-goals-service',
                            'transaction-service', 'user-service'
                        ]

                        services.each { svc ->
                            bat "kubectl apply -f k8s\\${svc}\\deployment.yaml"
                            bat "kubectl apply -f k8s\\${svc}\\service.yaml"
                        }
                    }
                }
            }
        }

        stage('Smoke Test') {
            steps {
                script {
                    def urls = [
                        "auth-service"        : "http://auth-service:8000/health",
                        "user-service"        : "http://user-service:8001/health",
                        "budget-service"      : "http://budget-service:8003/health",
                        "frontend"            : "http://frontend:8501",
                        "transaction-service" : "http://transaction-service:8002/health",
                        "notification-service": "http://notification-service:8006/health",
                        "saving-goals-service": "http://saving-goals-service:8004/health",
                        "analytics-service"   : "http://analytics-service:8005/health"
                    ]

                    urls.each { name, url ->
                        try {
                            bat "curl -sSf --max-time 20 ${url}"
                            echo "âœ… ${name} is healthy"
                        } catch (Exception e) {
                            error "âŒ Smoke test failed: ${name} unreachable"
                        }
                    }
                }
            }
        }
    }

    post {
        success { echo "Pipeline succeeded! ğŸš€" }
        failure { echo "Pipeline failed! Check logs. âŒ" }
    }
}
