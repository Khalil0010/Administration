pipeline {
    agent any

    environment {
        GITHUB_REPO            = "https://github.com/Khalil0010/Administration.git"
        DOCKER_REGISTRY        = "aziz244"
        IMAGE_TAG              = "1.0"
        KUBECONFIG_CREDENTIALS = "kubeconfig-id"
        NAMESPACE              = "savewise"
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${GITHUB_REPO}"
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]
                    services.each { svc ->
                        dir(svc) {
                            sh 'python -m venv venv'
                            sh './venv/Scripts/pip install --upgrade pip'
                            sh './venv/Scripts/pip install -r requirements.txt'
                        }
                    }
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]
                    services.each { svc ->
                        dir(svc) {
                            sh "docker build -t ${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG} ."
                        }
                    }
                }
            }
        }

        stage('Prepare Trivy') {
            steps {
                script {
                    def trivyExists = sh(script: 'command -v trivy || true', returnStdout: true).trim()
                    if (!trivyExists) {
                        echo "Trivy not found, installing locally..."
                        sh '''
                            rm -rf trivy-bin
                            mkdir -p trivy-bin
                            wget -q https://github.com/aquasecurity/trivy/releases/download/v0.43.0/trivy_0.43.0_Linux-64bit.tar.gz -O trivy.tar.gz
                            [ -s trivy.tar.gz ] || { echo "ERROR: Download failed"; exit 1; }
                            tar -xzf trivy.tar.gz -C trivy-bin
                            rm trivy.tar.gz
                            chmod +x trivy-bin/trivy
                        '''
                    } else {
                        echo "Trivy already installed."
                    }
                }
            }
        }

        stage('Run Trivy Scan') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]
                    services.each { svc ->
                        def image = "${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG}"
                        echo "Scanning ${image}..."
                        def status = sh(script: "./trivy-bin/trivy image --exit-code 1 --no-progress --severity HIGH,CRITICAL ${image}", returnStatus: true)
                        if (status != 0) {
                            error("âŒ HIGH/CRITICAL vulnerabilities found in ${svc}")
                        }
                        echo "âœ… ${svc} passed Trivy scan"
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]
                    services.each { svc ->
                        sh "docker push ${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: KUBECONFIG_CREDENTIALS, variable: 'KUBECONFIG')]) {
                    script {
                        sh 'kubectl apply -f k8s/namespace.yaml'

                        def services = [
                            'analytics-service', 'auth-service', 'budget-service',
                            'frontend', 'notification-service', 'saving-goals-service',
                            'transaction-service', 'user-service'
                        ]

                        services.each { svc ->
                            sh "kubectl apply -f k8s/${svc}/deployment.yaml"
                            sh "kubectl apply -f k8s/${svc}/service.yaml"
                        }
                    }
                }
            }
        }

        stage('Smoke Test') {
            steps {
                script {
                    def urls = [
                        "auth-service"        : "http://auth-service:8000/health",
                        "user-service"        : "http://user-service:8001/health",
                        "budget-service"      : "http://budget-service:8003/health",
                        "frontend"            : "http://frontend:8501",
                        "transaction-service" : "http://transaction-service:8002/health",
                        "notification-service": "http://notification-service:8006/health",
                        "saving-goals-service": "http://saving-goals-service:8004/health",
                        "analytics-service"   : "http://analytics-service:8005/health"
                    ]

                    urls.each { name, url ->
                        try {
                            sh "curl -sSf --max-time 20 ${url}"
                            echo "âœ… ${name} is healthy"
                        } catch (Exception e) {
                            error "âŒ Smoke test failed: ${name} unreachable"
                        }
                    }
                }
            }
        }
    }

    post {
        success { echo "Pipeline succeeded! ğŸš€" }
        failure { echo "Pipeline failed! Check logs. âŒ" }
    }
}