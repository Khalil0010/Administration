pipeline {
    agent any

    environment {
        GITHUB_REPO            = "https://github.com/AzizSoftware/Administration.git"
        DOCKER_REGISTRY        = "aziz244"
        IMAGE_TAG              = "1.0"
        NAMESPACE              = "savewise"
        KUBECONFIG_CREDENTIALS = "kubeconfig-id"  // ID de la credential Jenkins contenant le kubeconfig
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${env.GITHUB_REPO}"
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]

                    services.each { svc ->
                        dir("${svc}") {
                            sh 'python -m venv venv'
                            sh './venv/Scripts/pip install --upgrade pip'
                            sh './venv/Scripts/pip install -r requirements.txt'
                        }
                    }
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]

                    services.each { svc ->
                        dir("${svc}") {
                            def image = "${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG}"
                            sh "docker build -t ${image} ."
                        }
                    }
                }
            }
        }

        stage('Prepare Trivy') {
            steps {
                script {
                    def trivyExists = sh(script: 'command -v trivy || true', returnStdout: true).trim()
                    if (!trivyExists) {
                        echo "Trivy not found, installing locally..."
                        sh '''
                            rm -rf trivy-bin
                            mkdir -p trivy-bin
                            wget -q https://github.com/aquasecurity/trivy/releases/download/v0.43.0/trivy_0.43.0_Linux-64bit.tar.gz -O trivy.tar.gz
                            if [ ! -s trivy.tar.gz ]; then
                                echo "ERROR: Downloaded Trivy archive is empty or missing!"
                                exit 1
                            fi
                            tar -xzf trivy.tar.gz -C trivy-bin
                            rm trivy.tar.gz
                            chmod +x trivy-bin/trivy
                        '''
                    } else {
                        echo "Trivy already installed."
                    }
                }
            }
        }

        stage('Run Trivy Scan') {
            steps {
                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]

                    services.each { svc ->
                        def image = "${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG}"
                        echo "Scanning ${image} ..."
                        def status = sh(
                            script: "./trivy-bin/trivy image --exit-code 1 --no-progress --severity HIGH,CRITICAL ${image}",
                            returnStatus: true
                        )
                        if (status != 0) {
                            error("‚ùå Trivy scan failed: HIGH/CRITICAL vulnerabilities found in ${svc}")
                        } else {
                            echo "‚úÖ ${svc} passed Trivy scan (no HIGH/CRITICAL vulnerabilities)"
                        }
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                // Ajout recommand√© : login Docker si n√©cessaire (√† adapter selon votre registry)
                // withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                //     sh 'echo $PASS | docker login -u $USER --password-stdin'
                // }

                script {
                    def services = [
                        'analytics-service', 'auth-service', 'budget-service',
                        'frontend', 'notification-service', 'saving-goals-service',
                        'transaction-service', 'user-service'
                    ]

                    services.each { svc ->
                        def image = "${DOCKER_REGISTRY}/${svc}:${IMAGE_TAG}"
                        sh "docker push ${image}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: "${KUBECONFIG_CREDENTIALS}", variable: 'KUBECONFIG')]) {
                    sh 'kubectl apply -f k8s/namespace.yaml'
                    sh 'kubectl apply -f k8s/frontend/deployment.yaml'

                    script {
                        def services = [
                            'analytics-service', 'auth-service', 'budget-service',
                            'frontend', 'notification-service', 'saving-goals-service',
                            'transaction-service', 'user-service'
                        ]

                        services.each { svc ->
                            sh "kubectl apply -f k8s/${svc}/deployment.yaml"
                            sh "kubectl apply -f k8s/${svc}/service.yaml"
                        }
                    }
                }
            }
        }

        stage('Smoke Test') {
            steps {
                script {
                    def urls = [
                        "auth-service"        : "http://auth-service.savewise.svc.cluster.local:8000/health",
                        "user-service"        : "http://user-service.savewise.svc.cluster.local:8001/health",
                        "budget-service"      : "http://budget-service.savewise.svc.cluster.local:8003/health",
                        "frontend"            : "http://frontend.savewise.svc.cluster.local:8501",
                        "transaction-service" : "http://transaction-service.savewise.svc.cluster.local:8002/health",
                        "notification-service": "http://notification-service.savewise.svc.cluster.local:8006/health",
                        "saving-goals-service": "http://saving-goals-service.savewise.svc.cluster.local:8004/health",
                        "analytics-service"   : "http://analytics-service.savewise.svc.cluster.local:8005/health"
                    ]

                    urls.each { name, url ->
                        try {
                            sh "curl -sSf --max-time 30 ${url}"
                            echo "‚úÖ ${name} is UP and healthy"
                        } catch (err) {
                            error "‚ùå Smoke test failed: ${name} is not reachable (${url})"
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully! üöÄ"
        }
        failure {
            echo "Pipeline failed! Please check the logs. ‚ùå"
        }
        cleanup {
            // Nettoyage optionnel des images locales si besoin
            // sh 'docker rmi $(docker images ${DOCKER_REGISTRY}/*:${IMAGE_TAG} -q) || true'
        }
    }
}